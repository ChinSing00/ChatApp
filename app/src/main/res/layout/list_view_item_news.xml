<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_view_item_news"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon_logo"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/text_view_name_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="覃爆珠"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginStart="13dp"
        android:layout_alignTop="@+id/image_view_item_news"
        android:layout_toEndOf="@+id/image_view_item_news"
        android:layout_marginTop="5dp" />
    <TextView
        android:id="@+id/text_view_news_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="覃爆珠发来贺电"
        android:textSize="10sp"
        android:textColor="#868686"
        android:layout_below="@+id/text_view_name_news"
        android:layout_alignStart="@+id/text_view_name_news"
        android:layout_marginTop="5dp"/>

</RelativeLayout>
