<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vogabond.chatapp.main.activity.MainActivity">

    <RadioGroup
        android:id="@+id/Radio_Group_Main"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >
        <RadioButton
            android:id="@+id/news_buttom"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@drawable/image_news"
            android:checked="true"
            android:text="消息"
            android:textColor="@color/color_main"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@null"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/friends_buttom"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="通讯录"
            android:textColor="@color/color_main"
            android:gravity="center"
            android:drawableTop="@drawable/image_friends"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@null"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/find_buttom"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="发现"
            android:textColor="@color/color_main"
            android:gravity="center"
            android:drawableTop="@drawable/image_find"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@null"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/we_buttom"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="直播间"
            android:textColor="@color/color_main"
            android:gravity="center"
            android:drawableTop="@drawable/live"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@null"
            android:button="@null"/>
    </RadioGroup>
    <ImageView
        android:id="@+id/image_view_main"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f1eeee"
        android:layout_above="@id/Radio_Group_Main"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/image_view_main">
    </android.support.v4.view.ViewPager>

</RelativeLayout>
